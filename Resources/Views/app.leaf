                         </div>
                         <div class="swiper-slide">
                             <img src="/Images/gamblit_images/create_gamble_page.png">
                         </div>
                         <div class="swiper-slide">
                             <img src="/Images/gamblit_images/feed_page.png">
                         </div>
                       </div>
                       <!-- If we need pagination -->
